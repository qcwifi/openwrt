#!/bin/sh

. /lib/functions.sh
. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh

ramips_setup_rt3x5x_vlans()
{
	if [ ! -x /sbin/swconfig ]; then
		# legacy default
		ucidef_set_interfaces_lan_wan "eth0.1" "eth0.2"
		return
	fi
	local wanports=""
	local lanports=""
	for port in 5 4 3 2 1 0; do
		if [ `swconfig dev rt305x port $port get disable` = "1" ]; then
			continue
		fi
		if [ `swconfig dev rt305x port $port get lan` = "0" ]; then
			wanports="$port:wan $wanports"
		else
			lanports="$port:lan $lanports"
		fi
	done
	ucidef_add_switch "rt305x" $lanports $wanports "6t@eth0"
}

ramips_setup_interfaces()
{
	local board="$1"

	case $board in
	11acnas|\
	d-team,newifi-d2)
		ucidef_add_switch "switch0" \
			"0:lan:4" "1:lan:3" "2:lan:2" "3:lan:1" "4:wan:5" "6@eth0"
		;;
	hc5661a|\
	k2p|\
	miwifi-nano)
		ucidef_add_switch "switch0" \
			"4:lan:1" "2:lan:2" "1:wan" "6@eth0"
		;;
	mt7621|\
	mt7628|\
	pbr-m1|\
	psg1208|\
	psg1218a|\
	youku-yk1|\
	youku,yk-l2)
		ucidef_add_switch "switch0" \
			"0:lan" "1:lan" "2:lan" "3:lan" "4:wan" "6@eth0"
		;;
	gehua,ghl-r-001)
		ucidef_add_switch "switch0" \
			"0:lan" "1:lan" "2:lan" "4:wan" "6@eth0"
		;;
	pbr-d1)
		ucidef_set_interface_lan "eth0"
		;;
	psg1218b)
		ucidef_add_switch "switch0" \
			"0:lan:3" "1:lan:2" "2:lan:1" "3:wan" "6@eth0"
		;;
	gl-mt300a|\
	gl-mt300n|\
	gl-mt750|\
	hilink,hlk-7628n|\
	hiwifi,hc5861b|\
	tplink,tl-wr842n-v5|\
	tl-wr840n-v4|\
	tl-wr840n-v5|\
	tl-wr841n-v13|\
	u7628-01-128M-16M|\
	ubnt-erx|\
	ubnt-erx-sfp|\
	youhua,wr1200js)
		ucidef_add_switch "switch0" \
			"1:lan" "2:lan" "3:lan" "4:lan" "0:wan" "6@eth0"
		;;
	hg255d)
		ucidef_add_switch "switch0" \
			"1:lan:4" "2:lan:3" "3:lan:2" "4:lan:1" "0:wan" "6@eth0"
		;;
	gl-mt300n-v2)
		ucidef_add_switch "switch0" \
			"1:lan" "0:wan" "6@eth0"
		;;
	mt7620a_mt7530)
		ucidef_add_switch "switch1" \
			"0:lan" "1:lan" "2:lan" "3:lan" "4:wan" "6@eth0"
		;;
	hc5661|\
	y1s)
		ucidef_add_switch "switch0" \
			"1:lan" "2:lan" "3:lan" "4:lan" "5:lan" "0:wan" "6@eth0"
		;;
	hc5861)
		ucidef_add_switch "switch0" \
			"0:lan" "1:lan" "5:wan" "6@eth0"
		;;
	hc5962)
		ucidef_add_switch "switch0" \
			"1:lan" "2:lan" "3:lan" "4:wan" "6@eth0"
		;;
	miwifi-mini|\
	y1|\
	hc5761)
		ucidef_add_switch "switch0" \
			"1:lan" "4:lan" "0:wan" "6@eth0"
		;;
	newifi-d1)
		ucidef_add_switch "switch0" \
		"1:lan:2" "2:lan:1" "4:wan" "6@eth0"
		;;
	phicomm,k2g)
		ucidef_add_switch "switch0" \
			"0:lan:4" "1:lan:3" "2:lan:2" "3:lan:1" "5:wan" "6@eth0"
		;;
	glinet,vixmini)
		ucidef_add_switch "switch0" \
			"0:lan" "6@eth0"
		;;
	xiaomi,mir3g)
		ucidef_add_switch "switch0" \
			"2:lan:2" "3:lan:1" "1:wan" "6t@eth0"
		;;
	xiaomi,mir3p)
		ucidef_add_switch "switch0" \
			"1:lan:3" "2:lan:2" "3:lan:1" "4:wan" "6@eth0"
		;;
	xiaomi,mir4a-100m)
		ucidef_add_switch "switch0" \
			"4:lan:1" "2:lan:2" "0:wan" "6@eth0"
		;;
	*)
		RT3X5X=`cat /proc/cpuinfo | egrep "(RT3.5|RT5350)"`
		if [ -n "${RT3X5X}" ]; then
			ramips_setup_rt3x5x_vlans
		else
			ucidef_set_interfaces_lan_wan "eth0.1" "eth0.2"
		fi
		;;
	esac
}

ramips_setup_macs()
{
	local board="$1"
	local lan_mac=""
	local wan_mac=""

	case $board in
	hilink,hlk-7628n|\
	y1|\
	y1s)
		lan_mac=$(cat /sys/class/net/eth0/address)
		lan_mac=$(macaddr_setbit_la "$lan_mac")
		wan_mac=$(macaddr_add "$lan_mac" 1)
		;;
	gl-mt300n-v2)
		wan_mac=$(mtd_get_mac_binary factory 4)
		;;
	hc5*61|\
	hc5661a|\
	hc5962|\
	hiwifi,hc5861b)
		lan_mac=`mtd_get_mac_ascii bdinfo "Vfac_mac "`
		[ -n "$lan_mac" ] || lan_mac=$(cat /sys/class/net/eth0/address)
		wan_mac=$(macaddr_add "$lan_mac" 1)
		;;
	miwifi-mini)
		wan_mac=$(cat /sys/class/net/eth0/address)
		lan_mac=$(macaddr_setbit_la "$wan_mac")
		;;
	m3|\
	m4-4M|\
	m4-8M|\
	x5|\
	x8)
		lan_mac=$(cat /sys/class/net/eth0/address)
		lan_mac=$(macaddr_add "$lan_mac" -2)
		;;
	newifi-d1)
		lan_mac=$(cat /sys/class/net/eth0/address)
		lan_mac=$(macaddr_add "$lan_mac" 2)
		;;
	phicomm,k2g)
		lan_mac=$(mtd_get_mac_binary factory 40)
		wan_mac=$(mtd_get_mac_binary factory 46)
		;;
	xiaomi,mir3g|\
	xiaomi,mir3p)
		lan_mac=$(mtd_get_mac_binary Factory 0xe006)
		;;
	*)
		lan_mac=$(cat /sys/class/net/eth0/address)
		wan_mac=$(macaddr_add "$lan_mac" 1)
		;;
	esac

	[ -n "$lan_mac" ] && ucidef_set_interface_macaddr "lan" $lan_mac
	[ -n "$wan_mac" ] && ucidef_set_interface_macaddr "wan" $wan_mac
}

board_config_update
board=$(board_name)
ramips_setup_interfaces $board
ramips_setup_macs $board
board_config_flush

exit 0
